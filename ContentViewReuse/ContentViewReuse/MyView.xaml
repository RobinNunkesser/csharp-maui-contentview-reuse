<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContentViewReuse.MyView">
    <ContentView.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <Label x:Name="TitleLabel" HorizontalOptions="Center"
                   VerticalOptions="StartAndExpand" FontAttributes="Bold" />
            <Entry x:Name="ItemNrEntry"
                   Placeholder="Item nr or serial number" />
            <Label Text="or" HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />
            <Button Text="Scan directly" VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentView.Content>
</ContentView>